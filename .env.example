# AI Claims Processing System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Mistral AI API
# ============================================
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# ============================================
# Scaleway Managed PostgreSQL Database
# ============================================
# Format: postgresql://username:password@host:port/database
# Get credentials from Scaleway Console -> Managed Databases
DATABASE_URL=postgresql://username:password@host.scw.cloud:port/database_name

# ============================================
# Scaleway Object Storage (S3-compatible)
# ============================================
# Get credentials from Scaleway Console -> Object Storage -> API Keys
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_BUCKET_NAME=your_bucket_name
S3_ENDPOINT_URL=https://s3.fr-par.scw.cloud
S3_REGION=fr-par

# Scaleway Organization & Project IDs
# Get from Scaleway Console -> Organization Settings
SCW_DEFAULT_ORGANIZATION_ID=your_organization_id_here
SCW_DEFAULT_PROJECT_ID=your_project_id_here

# ============================================
# Redis (used by Celery for task queue)
# ============================================
# Default Docker Compose setup - no changes needed
REDIS_URL=redis://redis:6379/0
