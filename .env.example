# ==============================================
# AI CLAIMS - ENVIRONMENT TEMPLATE
# ==============================================
# Copy this file to .env.local (development) or .env.production (production)
# NEVER commit .env files with real credentials!

# ==============================================
#  ENVIRONMENT
# ==============================================
ENVIRONMENT=development

# ==============================================
#  DATABASE
# ==============================================
DATABASE_URL=postgresql://claims_user:claims_password@db:5432/claims_db

# ==============================================
#  REDIS
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
#  AI PROVIDERS (MISTRAL - GDPR Compliant!)
# ==============================================
LLM_PROVIDER=mistral
LLM_MODEL_VERSION=mistral-large-latest

# Mistral AI (RECOMMENDED - GDPR compliant, EU-based)
MISTRAL_API_KEY=your_mistral_api_key_here

# Alternative providers (optional)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
#  STORAGE (MinIO)
# ==============================================
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_NAME=ai-claims
S3_REGION=us-east-1

# ==============================================
#  AUTHENTICATION (Better Auth)
# ==============================================
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
#  EMAIL (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@company.sk
SMTP_USE_TLS=true

# ==============================================
#  FRONTEND & API URLs
# ==============================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
#  PRESIDIO
# ==============================================
PRESIDIO_URL=http://presidio:8001
